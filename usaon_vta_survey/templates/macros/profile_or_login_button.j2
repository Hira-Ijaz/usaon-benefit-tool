{% macro profile_or_login_button(current_user) -%}
  {% if current_user.is_authenticated %}
    <a href="{{url_for('profile', user_id=current_user.id)}}">Profile</a>
    <a href="{{url_for('logout')}}">Logout</a>
  {% else %}
    <a href="{{url_for('login')}}">Login</a>
  {% endif %}
  
{%- endmacro -%}
