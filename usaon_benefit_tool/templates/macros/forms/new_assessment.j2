{% macro new_assessment_form(form) -%}
  <h2>New assessment</h2>

  <form action={{ url_for("assessments.post") }} method="POST">
    {{form.csrf_token}}

    {{form.title.label}} {{form.title(rows=4, cols=100)}}
    {% if form.title.errors %}
      <ul class="errors">
      {% for error in form.title.errors %}
        <li>{{ error }}</li>
      {% endfor %}
      </ul>
    {% endif %}

    <br />

    {{form.description.label}} {{form.description(rows=4, cols=100)}}
    {% if form.description.errors %}
      <ul class="errors">
      {% for error in form.name.errors %}
        <li>{{ error }}</li>
      {% endfor %}
      </ul>
    {% endif %}

    <input type="submit" value="Create new assessment" />

  </form>
{%- endmacro -%}
