{% from 'bootstrap5/utils.html' import render_icon %}

{% macro render_nav_pill_item(endpoint, text, _icon='', _badge='') %}
  {% set active = True if request.endpoint and request.endpoint == endpoint else False %}

  <li class="nav-item">
    <a class="nav-link{% if active %} active" aria-current="page{% endif %}"
       href="{{ url_for(endpoint, **kwargs) }}"
    >
      {% if _icon %}{{render_icon(_icon)}} {% endif %}{{ text }} {% if _badge %}<span class="badge badge-light rounded-pill bg-light">{{ _badge }}</span>{% endif %}
    </a>
  </li>
{% endmacro %}
